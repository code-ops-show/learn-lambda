---
title: View our Courses / Paths
---

<div id='courses' class='row'>
    <% count = 0 %>
  <% data.journeys.each do |name,course| %>
  <div class='col-sm-4 col-md-4'>
      <div class="panel panel-info">
          <div class="panel-heading">
              <h3 class="panel-title"><%= course[:name] %></h3>
              <%= course[:header] %>
          </div>
          <div class="panel-body">
              <table>
                  <tr>
                      <td width="30%">
                        
<img style="-webkit-user-select:none; display:block; margin:auto;" 
     src="<%= course[:image] %>" width="100px">
                      </td>
                      <td>
                        <%= course[:content] %>
                      </td>
                  </tr>
                  <tr><td colspan="2" align="center">
                          <div class="btn btn-success">View Path</div>
                      </td></tr>
              </table>
          </div>
      </div>
  </div>
  <% count += 1 %>
  <%= (count % 3 == 0 ? ' &nbsp; <hr/>' : '') %>
  <% end %>
</div>

